name: CI Pipeline

on:
  push:
    branches:
      - main  # You can change this to the branch you want to trigger the pipeline on

jobs:
  build:
    runs-on: ubuntu-latest  # You can choose your runner, e.g., macos-latest or windows-latest

    steps:
      # Checkout code from the repository
      - name: Checkout code
        uses: actions/checkout@v2

      # Set up Python for the environment
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.9'

      # Install Docker (GitHub runners already have it, this is for other environments)
      - name: Set up Docker
        uses: docker/setup-buildx-action@v2

      # Install dependencies
      - name: Install dependencies
        run: |
          pip install -r requirements.txt  # Make sure all dependencies are installed
          pip install uv  # Ensure `uv` is installed (since it's being used in Docker entrypoint)

      # Build Docker containers
      - name: Build Docker containers
        run: |
          docker-compose build  # Rebuild the containers (use --no-cache to avoid caching old images)

      # Start Docker containers
      - name: Start Docker containers
        run: |
          docker-compose up -d  # Start containers in detached mode

      # Wait for DB to be ready
      - name: Wait for DB to be ready
        run: |
          wget https://raw.githubusercontent.com/vishnubob/wait-for-it/master/wait-for-it.sh
          chmod +x wait-for-it.sh
          ./wait-for-it.sh postgres:5432 -- timeout=90 --strict -- echo "Postgres is up"

      # Run Alembic migrations
      - name: Run Alembic Migrations
        run: |
          docker-compose exec ingestion_service uv run alembic upgrade head  # Runs migrations inside the ingestion_service container

      # Run Tests (Optional, based on your needs)
      - name: Run Tests
        run: |
          docker-compose exec ingestion_service pytest  # Runs your tests in the container
